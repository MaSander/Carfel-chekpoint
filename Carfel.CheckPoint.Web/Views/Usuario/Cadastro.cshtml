    @switch (@ViewBag.UsuarioTipo)
    {
       case "Administrador":
       {
           Layout= "MasterPageAdimin";
           break;
       }
       case "Comum":
       {
            if(ViewBag.UsuarioNome != null)
            {
                Layout= "MasterPageLogado";
            } else {
                Layout= "MasterPageDeslogado";
            }
           break;
       }
       @default:
       {
           Layout= "MasterPageDeslogado";
           break;
       }
    }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Cadastro de usuario</title>

    <link rel="stylesheet" href="/Style/Cadastro.css">
    
</head>

<body>
    <main class="flex-container">

        <div id="bloco_1">

        <h1>Cadastro de usuario</h1>

        <div class="questionario">


            <form class="flex-container" action="/Usuario/Cadastro" method="POST">
        
                <label>
                    <h3>Nome</h3>
                    <input id="questarea" type="text" name="nome" required>
                </label>
        
                <label>
                    <h3>E-mail</h3>
                    <input id="questarea" type="email" name="email" required>
                </label>
                <label>
                    <h3>Senha</h3>
                    <input id="questarea" type="password" name="senha" required>
                </label>
                
                <button class="button" type="submit" value="Salvar">Salvar</button>

                <div class="mensagem">@ViewBag.Mensagem</div>
            </form>
        </div>
        
        </div>

    </main>

</body>
</html>